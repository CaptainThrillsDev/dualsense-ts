{
  "name": "dualsense-ts",
  "version": "0.0.0",
  "description": "Control your DualSense controller with Typescript",
  "acontributors": [
    "CamTosh",
    "nsfm"
  ],
  "license": "GPL-3.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b --pretty --watch"
  },
  "dependencies": {
    "node-hid": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^16.0.0",
    "@types/node-hid": "^1.3.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.5.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "preset": "ts-jest"
  }
}
